<?xml version="1.0"?>
<block>
  <name>Red Pitaya Embedded Sink</name>
  <key>red_pitaya_emb_sink</key>
  <category>Red Pitaya</category>
  <import>import red_pitaya_emb</import>
  <make>red_pitaya_emb.sink(
        chan=$chan,
        freq=$freq,
        rate=$rate,
        corr=$corr,
        ptt=$ptt
)
  </make>
  <callback>set_freq($freq, $corr)</callback>
  <callback>set_rate($rate)</callback>
  <callback>set_ptt($ptt)</callback>
  <param>
    <name>Channel</name>
    <key>chan</key>
    <value>1</value>
    <type>int</type>
  </param>
  <param>
    <name>Center Frequency</name>
    <key>freq</key>
    <value>600000</value>
    <type>real</type>
  </param>
  <param>
    <name>Sample Rate</name>
    <key>rate</key>
    <value>48000</value>
    <type>int</type>
  </param>
  <param>
    <name>Freq. Correction ppm</name>
    <key>corr</key>
    <value>0</value>
    <type>real</type>
  </param>
  <param>
    <name>PTT</name>
    <key>ptt</key>
    <value>False</value>
    <type>bool</type>
  </param>
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
</block>
