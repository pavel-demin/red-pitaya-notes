<block>
  <name>Red Pitaya Sink</name>
  <key>red_pitaya_sink</key>
  <category>Red Pitaya</category>
  <import>import red_pitaya</import>
  <make>red_pitaya.sink(
        addr=$addr,
        port=$port,
        freq=$freq,
        rate=$rate,
        corr=$corr,
        ptt=$ptt
)
  </make>
  <callback>set_freq($freq, $corr)</callback>
  <callback>set_rate($rate)</callback>
  <callback>set_ptt($ptt)</callback>
  <param>
    <name>Address</name>
    <key>addr</key>
    <value>192.168.1.100</value>
    <type>string</type>
  </param>
  <param>
    <name>Port</name>
    <key>port</key>
    <value>1001</value>
    <type>int</type>
  </param>
  <param>
    <name>Center Frequency</name>
    <key>freq</key>
    <value>600000</value>
    <type>real</type>
  </param>
  <param>
    <name>Sample Rate</name>
    <key>rate</key>
    <value>100000</value>
    <type>int</type>
  </param>
  <param>
    <name>Freq. Correction ppm</name>
    <key>corr</key>
    <value>0</value>
    <type>real</type>
  </param>
  <param>
    <name>PTT</name>
    <key>ptt</key>
    <value>0</value>
    <type>int</type>
  </param>
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
</block>
